{
    "plex": {
        "url": "http://localhost:32400",
        "token": "YOUR_PLEX_TOKEN_HERE"
    },
    "mqtt": {
        "broker": "localhost",
        "port": 1883,
        "topic": "plex/nowplaying",
        "username": "",
        "password": "",
        "use_websockets": false,
        "websocket_path": "/mqtt",
        "protocol_version": 3.1,
        "use_ssl": false,
        "topic_strategy": "user_device_track"
    },
    "multi_session_handling": {
        "strategy": "all",
        "user_filter": [],
        "device_filter": [],
        "priority_user": ""
    },
    "web_interface": {
        "enabled": true,
        "host": "0.0.0.0", 
        "port": 5000
    },
    "tracking": {
        "enabled": true,
        "users_topic": "USERS",
        "devices_topic": "DEVICES",
        "persistence_file": "tracking_data.json",
        "auto_save": true
    },
    "lastfm": {
        "enabled": false,
        "api_key": "YOUR_LASTFM_API_KEY",
        "api_secret": "YOUR_LASTFM_API_SECRET", 
        "username": "YOUR_LASTFM_USERNAME",
        "password": "YOUR_LASTFM_PASSWORD",
        "scrobble_threshold": 0.5,
        "min_duration": 30
    },
    "homeassistant": {
        "enabled": false,
        "discovery_prefix": "homeassistant",
        "device_name": "Plex MQTT Bridge",
        "device_id": "plex_mqtt_bridge",
        "manufacturer": "ComputerComa",
        "model": "Plex MQTT Bridge",
        "sw_version": "1.0.0"
    },
    "logging": {
        "file_enabled": true,
        "directory": "logs",
        "filename": "plex_mqtt_bridge.log",
        "max_file_size_mb": 10,
        "backup_count": 5,
        "format": "%(asctime)s - %(levelname)s - %(message)s"
    },
    "publish_summary": false,
    "polling_interval": 5,
    "debug": false
}
